{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["tests/**/*", "src/**/*", "typings.d.ts"],
  "exclude": ["node_modules", "name-dic"]
}
